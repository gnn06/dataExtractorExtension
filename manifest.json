{
    "name": "CSS and XPath checker",
    "version": "0.7",
    "manifest_version": 2,
	
    "description": "Helper tool of to confirm CSS and XPath selector.",
    "icons": {
		"128": "icon_128.png"
    },
    "browser_action": {
		"default_title": "",
		"default_icon": "icon_19.png"
    },
    
    "background": {
        "scripts": [
            "js/contentscript/background.js"
        ]
    },
    
    "content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": [
			"js/lib/jquery.min.js",
			"js/contentscript/cxchecker.js"
		]
    }],
    
    "permissions": [
		"storage", "tabs", "activeTab", "http://*/*",
		"https://*/*"
    ]
}
